{
  "name": "x-wars",
  "version": "0.0.1",
  "description": "generic * wars engine",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "webpack",
    "lint": "eslint src test",
    "watch:test": "jest --watch",
    "watch:js": "npm run build && babel src -o dist/x-wars.js -w",
    "watch:lint": "esw src test demo --watch --cache",
    "start": "npm-run-all -p watch:lint watch:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianlafond/x-wars.git"
  },
  "keywords": [
    "drugwars",
    "dope",
    "wars",
    "game",
    "turn-based"
  ],
  "author": "Adrian Lafond <mail@adrianlafond.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianlafond/x-wars/issues"
  },
  "homepage": "https://adrianlafond.github.io/x-wars/",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.18",
    "eslint": "^4.16.0",
    "eslint-loader": "^1.9.0",
    "eslint-watch": "^3.1.3",
    "jest": "^22.1.4",
    "npm-run-all": "^4.1.2",
    "standard": "^10.0.3",
    "webpack": "^3.10.0"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverage": true,
    "testRegex": "\\.(spec|test)\\.js"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
